  "bugs": {
    "url": "https://github.com/SrBrahma/Firebase-Database-Listeners-Manager/issues"
  },
  "homepage": "https://github.com/SrBrahma/Firebase-Database-Listeners-Manager#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "typescript": "^4.1.3"
  }
}
