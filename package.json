{
  "name": "firebase-database-listeners-manager",
  "version": "2.2.1",
  "description": "Package to assist the developer to set and unset listeners to Firebase Realtime Database references.",
  "main": "lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -d",
    "deploy": "npm run build && npm publish",
    "start": "npm run deploy",
    "major": "npm --no-git-tag-version version major",
    "minor": "npm --no-git-tag-version version minor",
    "minorD": "npm run minor && npm run deploy",
    "patch": "npm --no-git-tag-version version patch",
    "patchD": "npm run patch && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SrBrahma/Firebase-Database-Listeners-Manager.git"
  },
  "keywords": [
    "Firebase",
    "Realtime",
    "Database",
    "Listener",
    "Unsubscriber"
  ],
